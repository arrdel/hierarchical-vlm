{
  "data_root": "data/processed",
  "annotations_root": "data/annotations",
  "splits": {
    "training": {
      "video_dir": "data/processed/training/videos",
      "annotation_dir": "data/processed/training/annotations",
      "batch_size": 8,
      "num_workers": 4,
      "shuffle": true,
      "prefetch_factor": 2
    },
    "validation": {
      "video_dir": "data/processed/validation/videos",
      "annotation_dir": "data/processed/validation/annotations",
      "batch_size": 8,
      "num_workers": 4,
      "shuffle": false,
      "prefetch_factor": 2
    },
    "test": {
      "video_dir": "data/processed/test/videos",
      "annotation_dir": "data/processed/test/annotations",
      "batch_size": 1,
      "num_workers": 1,
      "shuffle": false,
      "prefetch_factor": 1
    }
  },
  "preprocessing": {
    "target_fps": 24,
    "target_height": 224,
    "target_width": 224,
    "num_frames": 32,
    "frame_sampling": "uniform"
  },
  "augmentation": {
    "training": {
      "random_crop": true,
      "random_flip": true,
      "color_jitter": true,
      "temporal_jitter": true
    },
    "validation": {
      "center_crop": true,
      "random_crop": false,
      "random_flip": false
    }
  }
}