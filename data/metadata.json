{
  "dataset": "ActivityNet",
  "version": "1.2",
  "splits": {
    "training": {
      "num_videos": 4301,
      "annotation_files": [
        "action_detection.json",
        "video_qa.json",
        "video_captioning.json"
      ]
    },
    "validation": {
      "num_videos": 2072,
      "annotation_files": [
        "action_detection.json",
        "video_qa.json",
        "video_captioning.json"
      ]
    },
    "test": {
      "num_videos": 500,
      "annotation_files": [
        "action_detection.json",
        "video_qa.json",
        "video_captioning.json"
      ]
    }
  },
  "tasks": [
    "action_detection",
    "video_qa",
    "video_captioning"
  ],
  "annotation_format": {
    "action_detection": {
      "fields": [
        "video_id",
        "video_file",
        "actions",
        "duration"
      ],
      "action_fields": [
        "category",
        "start_time",
        "end_time"
      ]
    },
    "video_qa": {
      "fields": [
        "video_id",
        "video_file",
        "qa_pairs"
      ],
      "qa_fields": [
        "question",
        "answer"
      ]
    },
    "video_captioning": {
      "fields": [
        "video_id",
        "video_file",
        "captions"
      ]
    }
  }
}